---
const project = Astro.props;
const {key} = Astro.props;
const { tecnologias } = project;
---

<a href={`/project/${key}`} class="block h-full">
  <div class="flex flex-col h-full border-2 border-[#a49881] rounded-lg overflow-hidden transition ease-in-out hover:scale-[101%] duration-300 shadow-lg hover:shadow-xl min-h-[400px]">
    <!-- Imagen superior más grande -->
    <div class="relative h-56 overflow-hidden">
      <img 
        transition:name={`img-${key}`} 
        src={project.image.url} 
        alt={project.title} 
        class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
      />
      <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-4">
        <h2 transition:name={`title-${key}`} class="font-bold text-xl text-white">{project.title}</h2>
      </div>
    </div>
    
    <!-- Contenido de la carta -->
    <div class="p-4 flex-grow flex flex-col">
      <p class="text-sm text-gray-600 mb-3">{`Fecha: ${project.date}`}</p>
      
      <p class="text-justify text-sm mb-4 line-clamp-4">{project.description}</p>
      
      <div class="mt-auto">
        <div class="border-t border-[#a49881]/30 pt-3">
          <!-- <h3 class="text-sm font-semibold mb-2">Tecnologías utilizadas:</h3>
          <ul class="flex flex-wrap gap-2">
            {tecnologias.map((tec: any) => (
              <li class="relative group">
                <img
                  src={tec.img}
                  alt={tec.name}
                  class="w-7 h-7 dark:invert transition ease-in-out hover:scale-110 cursor-pointer"
                />
                <span class="absolute bottom-full mb-2 left-1/2 -translate-x-1/2 hidden group-hover:inline-block bg-gray-700 text-white text-xs rounded py-1 px-2 whitespace-nowrap">
                  {tec.name}
                </span>
              </li>
            ))} -->
          </ul>
        </div>
      </div>
    </div>
  </div>
</a>