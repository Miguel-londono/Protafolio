---
import { getCollection } from "astro:content";

const experiences = await getCollection("experiences");
---

<div class="grid gap-4 mb-10 p-2">
  <h1
    class="text-3xl font-bold mb-2 border-b-4 border-b-[#a49881] pb-3 text-center"
  >
    Experiencia üßë‚Äçüíª
  </h1>

  {
    experiences.map((exp) => (
      <div class="flex">
        <div>
          <span class="w-3 h-3 bg-[#a49881] block rounded-full mt-1" />
          <span class="bg-gray-600 block h-full w-[1px] translate-x-[6px]" />
        </div>
        <div class="bd-grid px-5">
          <div class="font-semibold text-sm mb-2">{exp.data.date}</div>
          <h3 class="font-bold text-2xl max-sm:text-lg mb-1">
            {exp.data.company}
          </h3>
          <div class="flex justify-between mb-3">
            <span class="">{exp.data.position}</span>
          </div>
          <p class="my-2 text-justify pr-16">{exp.data.description}</p>

          <h3 class="font-semibold mb-1">Logros</h3>
          <ul class="ml-5">
            {exp.data.achievements.map((achievement, index) => (
              <li class="list-disc ml-5">{achievement}</li>
            ))}
          </ul>

          <h3 class="font-semibold mb-1 mt-3">Roles y Conocimiento</h3>
          <ul>
            {exp.data.rols.map((rol, index) => (
              <li class="list-disc ml-5">{rol}</li>
            ))}
          </ul>
        </div>
      </div>
    ))
  }
</div>
